alias kubectl='echo use kprod or any other alias, you dumbass!'
alias kprod='aws-vault exec eks-cluster-creator -- /usr/local/bin/kubectl'
alias kstaging='aws-vault exec eks-cluster-creator -- /usr/local/bin/kubectl -n staging-web'
alias klocal='minikube kubectl --'

function kubebash(){
    instance=$(kprod get pods | awk '{print $1}' | fzf)

    if [[ -n $instance ]]; then
        kprod exec $instance -ti bash
    fi
}

function kubedescribe(){
    instance=$(kprod get pods | awk '{print $1}' | fzf)

    if [[ -n $instance ]]; then
        kprod describe pod $instance | less
    fi
}


function kubelogs(){
    instance=$(kubectl get pods | awk '{print $1}' | fzf)

    if [[ -n $instance ]]; then
        kubectl logs --tail=100 -f $instance
    fi
}

function kubedelete(){
    instance=$(kubectl get pods | awk '{print $1}' | fzf)

    if [[ -n $instance ]]; then
        kubectl delete pod $instance
    fi
}

function ff(){
    file=$(ag . --nocolor -l -g '' --ignore vendor --ignore dist | fzf-tmux -m -d "40%")

    if [[ -n $file ]]; then
        nvim $(echo $file | tr '\n' ' ')
    fi
}

function ffg(){
    file=$(INITIAL_QUERY=""
    RG_PREFIX="rg --column --line-number --no-heading --color=always --smart-case --ignore-file .gitignore"
    FZF_DEFAULT_COMMAND="$RG_PREFIX '$INITIAL_QUERY'" \
      fzf --bind "change:reload:$RG_PREFIX {q} || true" \
          --ansi --disabled --query "$INITIAL_QUERY" \
          --height=50% --layout=reverse)

    if [[ ! -z $file ]]; then
        split=("${(@s/:/)file}")
        vim $split[1] "+$split[2] norm! zzV"
    fi

}

function getpass(){
    id=$(lpass ls | sort | fzf | sed -r 's/^.*id: ([0-9]+).*$/\1/' | tr -d '\n')

    if [[ -n $id ]]; then
        pass=$(lpass show $id | grep Password | cut -d ':' -f 2 | tr -d ' ' | tr -d '\n') 
        if [[ $1 == '-n' ]]; then
            echo $pass
        else 
            echo -n $pass | copy-stuff
            echo "copied password"
        fi
    fi
}

function git-add(){ 
    git add $(git status -s | egrep '^(\s|\?\?).*?$' | fzf -m --preview 'file_status.py {}' | cut -c4-)
    git commit -v
}

function git-remove(){
    git reset HEAD -- $(git status -s | egrep -v '^(\s|\?\?).*?$' | fzf -m --preview 'file_status.py {}' | cut -c4-)
}

function git-checkout(){
    git checkout -- $(git status -s | egrep '^(\s|\?\?).*?$' | fzf -m --preview 'file_status.py {}' | cut -c4-) 
}

alias addon-sdk="cd /opt/addon-sdk && source bin/activate; cd -"

 
function gbranch(){
    git rev-parse --abbrev-ref HEAD | copy-stuff
}

alias cal="cal -3"
